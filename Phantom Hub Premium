                gameIcon.Name = "GameIcon"
                gameIcon.Size = UDim2.new(0, 40, 0, 40)
                gameIcon.Position = UDim2.new(0, 15, 0.5, -20)
                gameIcon.BackgroundTransparency = 1
                gameIcon.Text = game.icon
                gameIcon.Font = Enum.Font.GothamBold
                gameIcon.TextColor3 = config.accentColor
                gameIcon.TextSize = 24
                gameIcon.Parent = gameFrame
                
                local gameTitle = Instance.new("TextLabel")
                gameTitle.Name = "GameTitle"
                gameTitle.Size = UDim2.new(1, -170, 0, 30)
                gameTitle.Position = UDim2.new(0, 65, 0.5, -15)
                gameTitle.BackgroundTransparency = 1
                gameTitle.Text = game.name
                gameTitle.Font = Enum.Font.GothamBold
                gameTitle.TextColor3 = config.accentColor
                gameTitle.TextSize = 16
                gameTitle.TextXAlignment = Enum.TextXAlignment.Left
                gameTitle.Parent = gameFrame
                
                -- Add load button
                local loadButton = Instance.new("TextButton")
                loadButton.Name = "LoadButton"
                loadButton.Size = UDim2.new(0, 80, 0, 30)
                loadButton.Position = UDim2.new(1, -95, 0.5, -15)
                loadButton.BackgroundColor3 = config.glowColor
                loadButton.BorderSizePixel = 0
                loadButton.Text = "Load"
                loadButton.Font = Enum.Font.GothamBold
                loadButton.TextColor3 = Color3.fromRGB(255, 255, 255)
                loadButton.TextSize = 14
                loadButton.Parent = gameFrame
                
                local loadCorner = Instance.new("UICorner")
                loadCorner.CornerRadius = UDim.new(0, 6)
                loadCorner.Parent = loadButton
                
                -- Add hover effect
                loadButton.MouseEnter:Connect(function()
                    local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
                    local tween = TweenService:Create(loadButton, tweenInfo, {BackgroundColor3 = Color3.fromRGB(0, 140, 210)})
                    tween:Play()
                end)
                
                loadButton.MouseLeave:Connect(function()
                    local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
                    local tween = TweenService:Create(loadButton, tweenInfo, {BackgroundColor3 = config.glowColor})
                    tween:Play()
                end)
            end
        elseif i == 5 then -- Boost tab
            local boostContainer = Instance.new("Frame")
            boostContainer.Name = "BoostContainer"
            boostContainer.Size = UDim2.new(1, 0, 1, -50)
            boostContainer.Position = UDim2.new(0, 0, 0, 50)
            boostContainer.BackgroundTransparency = 1
            boostContainer.Parent = tabFrame
            
            -- Add boost info
            local boostInfo = Instance.new("TextLabel")
            boostInfo.Name = "BoostInfo"
            boostInfo.Size = UDim2.new(1, 0, 0, 60)
            boostInfo.Position = UDim2.new(0, 0, 0, 0)
            boostInfo.BackgroundTransparency = 1
            boostInfo.Text = "Boost your game performance and unlock premium features"
            boostInfo.Font = Enum.Font.GothamSemibold
            boostInfo.TextColor3 = Color3.fromRGB(200, 200, 200)
            boostInfo.TextSize = 16
            boostInfo.TextWrapped = true
            boostInfo.Parent = boostContainer
            
            -- Add boost options
            local boostOptions = {
                {name = "FPS Boost", desc = "Optimize game for better performance", icon = "üìà"},
                {name = "Premium Features", desc = "Unlock all premium features", icon = "‚≠ê"},
                {name = "Anti-Lag", desc = "Reduce lag and stuttering", icon = "‚ö°"}
            }
            
            for j, boost in ipairs(boostOptions) do
                local boostFrame = Instance.new("Frame")
                boostFrame.Name = "Boost_" .. j
                boostFrame.Size = UDim2.new(1, -10, 0, 100)
                boostFrame.Position = UDim2.new(0, 5, 0, j * 110 - 40)
                boostFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
                boostFrame.BorderSizePixel = 0
                boostFrame.Parent = boostContainer
                
                local boostCorner = Instance.new("UICorner")
                boostCorner.CornerRadius = UDim.new(0, 8)
                boostCorner.Parent = boostFrame
                
                local boostIcon = Instance.new("TextLabel")
                boostIcon.Name = "BoostIcon"
                boostIcon.Size = UDim2.new(0, 40, 0, 40)
                boostIcon.Position = UDim2.new(0, 15, 0, 15)
                boostIcon.BackgroundTransparency = 1
                boostIcon.Text = boost.icon
                boostIcon.Font = Enum.Font.GothamBold
                boostIcon.TextColor3 = config.accentColor
                boostIcon.TextSize = 24
                boostIcon.Parent = boostFrame
                
                local boostTitle = Instance.new("TextLabel")
                boostTitle.Name = "BoostTitle"
                boostTitle.Size = UDim2.new(1, -80, 0, 30)
                boostTitle.Position = UDim2.new(0, 65, 0, 15)
                boostTitle.BackgroundTransparency = 1
                boostTitle.Text = boost.name
                boostTitle.Font = Enum.Font.GothamBold
                boostTitle.TextColor3 = config.accentColor
                boostTitle.TextSize = 18
                boostTitle.TextXAlignment = Enum.TextXAlignment.Left
                boostTitle.Parent = boostFrame
                
                local boostDesc = Instance.new("TextLabel")
                boostDesc.Name = "BoostDesc"
                boostDesc.Size = UDim2.new(1, -80, 0, 30)
                boostDesc.Position = UDim2.new(0, 65, 0, 45)
                boostDesc.BackgroundTransparency = 1
                boostDesc.Text = boost.desc
                boostDesc.Font = Enum.Font.Gotham
                boostDesc.TextColor3 = Color3.fromRGB(180, 180, 180)
                boostDesc.TextSize = 14
                boostDesc.TextXAlignment = Enum.TextXAlignment.Left
                boostDesc.Parent = boostFrame
                
                -- Add activate button
                local activateButton = Instance.new("TextButton")
                activateButton.Name = "ActivateButton"
                activateButton.Size = UDim2.new(0, 120, 0, 36)
                activateButton.Position = UDim2.new(0.5, -60, 1, -46)
                activateButton.BackgroundColor3 = config.glowColor
                activateButton.BorderSizePixel = 0
                activateButton.Text = "Activate"
                activateButton.Font = Enum.Font.GothamBold
                activateButton.TextColor3 = Color3.fromRGB(255, 255, 255)
                activateButton.TextSize = 16
                activateButton.Parent = boostFrame
                
                local activateCorner = Instance.new("UICorner")
                activateCorner.CornerRadius = UDim.new(0, 6)
                activateCorner.Parent = activateButton
                
                -- Add hover effect
                activateButton.MouseEnter:Connect(function()
                    local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
                    local tween = TweenService:Create(activateButton, tweenInfo, {BackgroundColor3 = Color3.fromRGB(0, 140, 210)})
                    tween:Play()
                end)
                
                activateButton.MouseLeave:Connect(function()
                    local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
                    local tween = TweenService:Create(activateButton, tweenInfo, {BackgroundColor3 = config.glowColor})
                    tween:Play()
                end)
            end
        elseif i == 6 then -- Profile tab
            local profileContainer = Instance.new("Frame")
            profileContainer.Name = "ProfileContainer"
            profileContainer.Size = UDim2.new(1, 0, 1, -50)
            profileContainer.Position = UDim2.new(0, 0, 0, 50)
            profileContainer.BackgroundTransparency = 1
            profileContainer.Parent = tabFrame
            
            -- Add profile avatar
            local avatarFrame = Instance.new("Frame")
            avatarFrame.Name = "AvatarFrame"
            avatarFrame.Size = UDim2.new(0, 100, 0, 100)
            avatarFrame.Position = UDim2.new(0.5, -50, 0, 10)
            avatarFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
            avatarFrame.BorderSizePixel = 0
            avatarFrame.Parent = profileContainer
            
            local avatarCorner = Instance.new("UICorner")
            avatarCorner.CornerRadius = UDim.new(1, 0)
            avatarCorner.Parent = avatarFrame
            
            local avatarLabel = Instance.new("TextLabel")
            avatarLabel.Name = "AvatarLabel"
            avatarLabel.Size = UDim2.new(1, 0, 1, 0)
            avatarLabel.BackgroundTransparency = 1
            avatarLabel.Text = "üë§"
            avatarLabel.Font = Enum.Font.GothamBold
            avatarLabel.TextColor3 = config.accentColor
            avatarLabel.TextSize = 50
            avatarLabel.Parent = avatarFrame
            
            -- Add username
            local usernameLabel = Instance.new("TextLabel")
            usernameLabel.Name = "UsernameLabel"
            usernameLabel.Size = UDim2.new(1, 0, 0, 30)
            usernameLabel.Position = UDim2.new(0, 0, 0, 120)
            usernameLabel.BackgroundTransparency = 1
            usernameLabel.Text = player.Name
            usernameLabel.Font = Enum.Font.GothamBold
            usernameLabel.TextColor3 = config.accentColor
            usernameLabel.TextSize = 20
            usernameLabel.Parent = profileContainer
            
            -- Add membership status
            local membershipLabel = Instance.new("TextLabel")
            membershipLabel.Name = "MembershipLabel"
            membershipLabel.Size = UDim2.new(1, 0, 0, 30)
            membershipLabel.Position = UDim2.new(0, 0, 0, 150)
            membershipLabel.BackgroundTransparency = 1
            membershipLabel.Text = "Premium Member"
            membershipLabel.Font = Enum.Font.GothamSemibold
            membershipLabel.TextColor3 = Color3.fromRGB(255, 215, 0) -- Gold color
            membershipLabel.TextSize = 16
            membershipLabel.Parent = profileContainer
            
            -- Add stats
            local statsFrame = Instance.new("Frame")
            statsFrame.Name = "StatsFrame"
            statsFrame.Size = UDim2.new(1, -40, 0, 100)
            statsFrame.Position = UDim2.new(0, 20, 0, 190)
            statsFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
            statsFrame.BorderSizePixel = 0
            statsFrame.Parent = profileContainer
            
            local statsCorner = Instance.new("UICorner")
            statsCorner.CornerRadius = UDim.new(0, 8)
            statsCorner.Parent = statsFrame
            
            local statsTitle = Instance.new("TextLabel")
            statsTitle.Name = "StatsTitle"
            statsTitle.Size = UDim2.new(1, 0, 0, 30)
            statsTitle.Position = UDim2.new(0, 0, 0, 5)
            statsTitle.BackgroundTransparency = 1
            statsTitle.Text = "Your Stats"
            statsTitle.Font = Enum.Font.GothamBold
            statsTitle.TextColor3 = config.accentColor
            statsTitle.TextSize = 16
            statsTitle.Parent = statsFrame
            
            -- Add stat items
            local statItems = {
                {name = "Scripts Executed", value = "247"},
                {name = "Time Used", value = "14h 23m"}
            }
            
            for j, stat in ipairs(statItems) do
                local statName = Instance.new("TextLabel")
                statName.Name = "StatName_" .. j
                statName.Size = UDim2.new(0.5, 0, 0, 30)
                statName.Position = UDim2.new(0, 15, 0, 25 + j * 30)
                statName.BackgroundTransparency = 1
                statName.Text = stat.name
                statName.Font = Enum.Font.GothamSemibold
                statName.TextColor3 = Color3.fromRGB(200, 200, 200)
                statName.TextSize = 14
                statName.TextXAlignment = Enum.TextXAlignment.Left
                statName.Parent = statsFrame
                
                local statValue = Instance.new("TextLabel")
                statValue.Name = "StatValue_" .. j
                statValue.Size = UDim2.new(0.5, -15, 0, 30)
                statValue.Position = UDim2.new(0.5, 0, 0, 25 + j * 30)
                statValue.BackgroundTransparency = 1
                statValue.Text = stat.value
                statValue.Font = Enum.Font.GothamBold
                statValue.TextColor3 = config.glowColor
                statValue.TextSize = 14
                statValue.TextXAlignment = Enum.TextXAlignment.Right
                statValue.Parent = statsFrame
            end
        end
        
        -- Store references
        tabButtons[i] = tabButton
        tabFrames[i] = tabFrame
        
        -- Tab button click handler
        tabButton.MouseButton1Click:Connect(function()
            -- Update selected tab
            tabButtons[selectedTab].BackgroundColor3 = Color3.fromRGB(20, 20, 20)
            tabFrames[selectedTab].Visible = false
            
            selectedTab = i
            tabButton.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
            tabFrame.Visible = true
            
            -- Play selection animation
            local tweenInfo = TweenInfo.new(config.animationSpeed, Enum.EasingStyle.Quart, Enum.EasingDirection.Out)
            local tween = TweenService:Create(tabButton, tweenInfo, {BackgroundColor3 = Color3.fromRGB(30, 30, 30)})
            tween:Play()
        end)
        
        -- Hover effects
        tabButton.MouseEnter:Connect(function()
            if selectedTab ~= i then
                local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
                local tween = TweenService:Create(tabButton, tweenInfo, {BackgroundColor3 = Color3.fromRGB(25, 25, 25)})
                tween:Play()
            end
            tooltip.Visible = true
        end)
        
        tabButton.MouseLeave:Connect(function()
            if selectedTab ~= i then
                local tweenInfo = TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
                local tween = TweenService:Create(tabButton, tweenInfo, {BackgroundColor3 = Color3.fromRGB(20, 20, 20)})
                tween:Play()
            end
            tooltip.Visible = false
        end)
    end
    
    -- Create close button
    local closeButton = Instance.new("TextButton")
    closeButton.Name = "CloseButton"
    closeButton.Size = UDim2.new(0, 30, 0, 30)
    closeButton.Position = UDim2.new(1, -40, 0, 10)
    closeButton.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    closeButton.BorderSizePixel = 0
    closeButton.Text = "‚úï"
    closeButton.TextColor3 = config.accentColor
    closeButton.TextSize = 16
    closeButton.Font = Enum.Font.GothamBold
    closeButton.Parent = mainFrame
    
    -- Add corner radius to close button
    local closeCorner = Instance.new("UICorner")
    closeCorner.CornerRadius = UDim.new(0, 6)
    closeCorner.Parent = closeButton
    
    -- Close button click handler
    closeButton.MouseButton1Click:Connect(function()
        -- Animate closing
        local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quart, Enum.EasingDirection.Out)
        local tween = TweenService:Create(mainFrame, tweenInfo, {Size = UDim2.new(0, 600, 0, 0), Position = UDim2.new(0.5, -300, 0.5, 0)})
        tween:Play()
        
        tween.Completed:Connect(function()
            screenGui:Destroy()
        end)
    end)
    
    -- Make GUI draggable
    local isDragging = false
    local dragInput
    local dragStart
    local startPos
    
    local function updateDrag(input)
        local delta = input.Position - dragStart
        mainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
    
    titleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            isDragging = true
            dragStart = input.Position
            startPos = mainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    isDragging = false
                end
            end)
        end
    end)
    
    titleBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement then
            dragInput = input
        end
    end)
    
    UserInputService.InputChanged:Connect(function(input)
        if input == dragInput and isDragging then
            updateDrag(input)
        end
    end)
    
    -- Animate opening
    mainFrame.Size = UDim2.new(0, 600, 0, 0)
    mainFrame.Position = UDim2.new(0.5, -300, 0.5, 0)
    
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quart, Enum.EasingDirection.Out)
    local tween = TweenService:Create(mainFrame, tweenInfo, {Size = UDim2.new(0, 600, 0, 350), Position = UDim2.new(0.5, -300, 0.5, -175)})
    tween:Play()
    
    -- Pulse glow effect
    local function pulseGlow()
        while screenGui.Parent do
            local tweenInfo = TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true)
            local tween = TweenService:Create(glowEffect, tweenInfo, {ImageTransparency = 1 - (config.glowIntensity * 0.7)})
            tween:Play()
            wait(3)
        end
    end
    
    coroutine.wrap(pulseGlow)()
    
    return screenGui
end

-- Create and show the GUI
local phantomHubGUI = createPhantomHubGUI()

-- Toggle GUI with a keybind (Right Shift)
UserInputService.InputBegan:Connect(function(input, gameProcessed)
    if not gameProcessed and input.KeyCode == Enum.KeyCode.RightShift then
        local playerGui = Players.LocalPlayer:WaitForChild("PlayerGui")
        local gui = playerGui:FindFirstChild("PhantomHubPremium")
        
        if gui then
            gui:Destroy()
        else
            createPhantomHubGUI()
        end
    end
end)

-- Notify user that the script has loaded
local function notify(message, duration)
    duration = duration or 3
    
    local player = Players.LocalPlayer
    local playerGui = player:WaitForChild("PlayerGui")
    
    -- Create notification GUI
    local notifyGui = Instance.new("ScreenGui")
    notifyGui.Name = "PhantomNotification"
    notifyGui.Parent = playerGui
    
    local notifyFrame = Instance.new("Frame")
    notifyFrame.Name = "NotifyFrame"
    notifyFrame.Size = UDim2.new(0, 300, 0, 60)
    notifyFrame.Position = UDim2.new(0.5, -150, 0, -70)
    notifyFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    notifyFrame.BorderSizePixel = 0
    notifyFrame.Parent = notifyGui
    
    local notifyCorner = Instance.new("UICorner")
    notifyCorner.CornerRadius = UDim.new(0, 8)
    notifyCorner.Parent = notifyFrame
    
    local notifyText = Instance.new("TextLabel")
    notifyText.Name = "NotifyText"
    notifyText.Size = UDim2.new(1, -20, 1, 0)
    notifyText.Position = UDim2.new(0, 10, 0, 0)
    notifyText.BackgroundTransparency = 1
    notifyText.Text = message
    notifyText.Font = Enum.Font.GothamSemibold
    notifyText.TextColor3 = Color3.fromRGB(255, 255, 255)
    notifyText.TextSize = 16
    notifyText.TextWrapped = true
    notifyText.Parent = notifyFrame
    
    -- Animate notification
    local tweenInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quart, Enum.EasingDirection.Out)
    local tween = TweenService:Create(notifyFrame, tweenInfo, {Position = UDim2.new(0.5, -150, 0, 20)})
    tween:Play()
    
    -- Remove notification after duration
    delay(duration, function()
        local tweenOut = TweenService:Create(notifyFrame, tweenInfo, {Position = UDim2.new(0.5, -150, 0, -70)})
        tweenOut:Play()
        
        tweenOut.Completed:Connect(function()
            notifyGui:Destroy()
        end)
    end)
end

notify("Phantom Hub Premium loaded! Press Right Shift to toggle.", 5)
